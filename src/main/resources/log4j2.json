{
  "configuration": {
    "status": "warn",
    "name": "SauceWebAppDemo",
    "appenders": {
      "Console": {
        "name": "Console",
        "target": "SYSTEM_OUT",
        "PatternLayout": {
          "pattern": "%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
        }
      },
      "File": {
        "name": "File",
        "fileName": "logs/app.log",
        "PatternLayout": {
          "pattern": "%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"
        }
      }
    },
    "loggers": {
      "root": {
        "level": "info",
        "AppenderRef": [
          {
            "ref": "Console"
          },
          {
            "ref": "File"
          }
        ]
      }
    }
  }
}

